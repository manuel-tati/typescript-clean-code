{
  "compilerOptions": {  
    "target": "es2016",                                 
    "outDir": "./lib",
    "baseUrl": "./src",
    "module": "ES2020",  
    "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,             
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["node_modules", "**/*.test.ts","test"],
  "include": ["src", "test"]
}
